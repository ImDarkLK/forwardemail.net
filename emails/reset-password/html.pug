extends ../layout

block content
  .container.mt-3
    .row
      .col-12
        .card.d-block.text-center
          h5.card-header= t("Password reset")
          .card-body
            p.card-text!= t('Click the button below within <span class="notranslate">%s</span> to continue.', dayjs(user[config.userFields.resetTokenExpiresAt]).fromNow(true))
            a(href=link, role="button").btn.btn-lg.btn-block.btn-success= t("Change your password")
          div: small.card-footer.text-muted= t("If you did not submit this request, then please reply to let us know.")
