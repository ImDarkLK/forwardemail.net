extends ../layout

block content
  .container.mt-3
    .row
      .col-12
        .card.border-dark.d-block
          h5.card-header.bg-dark.text-white.text-center= t("For your technical administrator")
          .card-body
            p.card-text!= t('This email is a one-time courtesy message from our free email forwarding service at <strong><a href="%s" class="notranslate">ForwardEmail.net</a></strong>.', config.urls.web)
            p.card-text.mb-3!= t('We detected that an email from <strong class="notranslate">%s</strong> sent by <strong class="notranslate">%s</strong> (<span class="notranslate">%s</span>) has <strong><u>failed</u></strong> <a href="https://en.wikipedia.org/wiki/Sender_Policy_Framework">Sender Policy Framework</a> validation.', from, client_hostname, remote_address)
            p.card-text.mb-3!= t('The email was <span class="notranslate">%s</span> to its intended recipient(s).', result === "fail" ? "not sent" : "sent")
            p.card-text.mb-3= t("If the sender does not look suspicious, then we suggest that your technical administrator should fix this issue immediately.")
            p.card-text!= t(`<strong></u>Please forward this email to your technical administrator</u></strong> or the person or organization in charge of email management at <strong>${org_domain}</strong>.`)
            ul
              li
                strong Remote Address:
                = " "
                = remote_address
              li
                strong From:
                = " "
                = from
              li
                strong Client Hostname:
                = " "
                = client_hostname
              li
                strong SPF Result:
                = " "
                = result
              li
                strong SPF Explanation:
                = " "
                = explanation
            a.btn.btn-lg.btn-block.btn-primary(href=config.urls.web)
              .d-inline-block.align-middle
                = t("Learn about us")
          .card-footer.text-center: small.text-muted= t("Do not mark this email as spam. This helps ensure emails deliverability.")
