extends ../layout

block content
  .container.mt-3
    .row
      .col-12
        .card.d-block.text-center
          h5.card-header= t("Verify email")
          .card-body
            .card-text
              p= t("Use this verification code:")
              pre: code.display-3= pin
              p= t("This code expires within %s.", dayjs(expiresAt).fromNow(true))
            a(href=link).btn.btn-lg.btn-block.btn-primary
              .d-inline-block.align-middle
                = t("Verify now")
          div: small.card-footer.text-muted= t("If you did not submit this request, then please reply to let us know.")
