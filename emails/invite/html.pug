extends ../layout

block content
  .container.mt-3
    .row
      .col-12
        .card.d-block.text-center
          h5.card-header= t("Team invite")
          .card-body
            p.card-text= t("Click the button below to accept your invite.")
            a(
              href=`${config.urls.web}/${locale}/my-account/domains/${domain.id}/invites`,
              role="button"
            ).btn.btn-lg.btn-block.btn-success= t("Accept invite")
          div: small.card-footer.text-muted= t("If you did not expect to receive this invite, then please reply to let us know.")
