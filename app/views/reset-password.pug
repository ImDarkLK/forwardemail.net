extends layout

block body
  .container.py-3
    div: h1.text-center.my-3.py-3= t("Reset Password")
    .row
      .col-sm-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3
        .alert.alert-primary.text-center.mb-4= t("Confirm your email address and set a new password.")
        form(action=ctx.path, method="POST").ajax-form.confirm-prompt
          .form-group.floating-label
            input#input-email(
              type="email",
              autofocus,
              autocomplete="email",
              name="email",
              placeholder="name@example.com"
            ).form-control.form-control-lg
            label(for="input-email")= t("Email address")
          .form-group.floating-label
            input#input-password(
              type="password",
              autocomplete="new-password",
              name="password",
              placeholder=" "
            ).form-control.form-control-lg
            label(for="input-password")= t("New password")
          button(type="submit").btn.btn-success.btn-block.btn-lg= t("Continue")
        .alert.alert-warning.mt-3.text-center
          ul.list-inline.mb-0
            li.list-inline-item= t("Having trouble?")
            li.list-inline-item
              a(href=l("/forgot-password")).alert-link= t("Start over")
