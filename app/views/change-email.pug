extends layout

block body
  .container.py-3
    div: h1.text-center.my-3.py-3= t("Change Your Email")
    .row
      .col-sm-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3
        .alert.alert-warning.text-center.mb-4!= t('From <strong class="notranslate">%s</strong> to <strong class="notranslate">%s</strong>.', user[config.passportLocalMongoose.usernameField], user[config.userFields.changeEmailNewAddress])
        form(action=ctx.path, method="POST").ajax-form.confirm-prompt
          input#input-email(
            type="hidden",
            name="email",
            value=user[config.passportLocalMongoose.usernameField]
          )
          .form-group.floating-label
            input#input-password(
              type="password",
              autocomplete="confirm-password",
              name="password",
              placeholder=" "
            ).form-control.form-control-lg
            label(for="input-password")= t("Confirm password")
          button(type="submit").btn.btn-success.btn-block.btn-lg= t("Continue")
