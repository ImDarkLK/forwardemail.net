mixin onboard(onboardHeader, onboardText, onboardFormAction=ctx.path, onboardKeepReading=false, onboardContainerClass='')
  div&attributes(attributes)
    div(class=onboardContainerClass).container-fluid.bg-light.py-5
      .row
        .col
          if onboardHeader
            h1.text-center!= onboardHeader
          if onboardText
            p.text-center.mb-0.text-muted!= onboardText
          form(action=onboardFormAction, method="POST").ajax-form.pt-4.mb-3
            input(type="hidden", name="_csrf", value=ctx.csrf)
            .form-row
              .col-12.col-md-6.offset-md-3
                .form-group.floating-label
                  input#input-onboard-domain(
                    type="text",
                    name="domain",
                    value=domain,
                    required,
                    placeholder="example.com"
                  ).form-control.form-control-lg
                  label(for="input-onboard-domain")= t("Enter your domain")
                .form-group.floating-label
                  input#input-onboard-email(
                    type="email",
                    autocomplete="email",
                    name="email",
                    value=email,
                    placeholder="name@gmail.com",
                    required
                  ).form-control.form-control-lg
                  label(for="input-onboard-email")= t("Enter your email")
                .form-check.form-group
                  input#input-enhanced-protection(
                    type="checkbox",
                    name="enhanced_protection",
                    checked,
                    value="true"
                  ).form-check-input
                  label(for="input-enhanced-protection").form-check-label!= t('Upgrade to <a href="%s" target="_blank" rel="noopener noreferrer" class="notranslate">Enhanced Protection</a> ($3/mo premium support and privacy)', l("/pricing"))
                if user
                  .form-check.form-group
                    input#input-create-domain(
                      type="checkbox",
                      name="create_domain",
                      checked,
                      value="true"
                    ).form-check-input
                    label(for="input-create-domain").form-check-label= t("Add this domain to your account (if it does not exist)")
                else
                  .form-check.form-group.d-flex
                    input#input-create-account(
                      type="checkbox",
                      name="create_account",
                      checked,
                      value="true",
                      aria-describedby="help-create-account"
                    ).form-check-input
                    label(for="input-create-account").form-check-label.mr-2= t("Create your free account now")
                    small#help-create-account.text-black-50.align-self-center.flex-grow-1.text-right
                      != t('Read our <a href="%s" target="_blank" rel="noopener noreferrer">Privacy Policy</a> and <a href="%s" target="_blank" rel="noopener noreferrer">Terms</a>', l("/privacy"), l("/terms"))
                button(type="submit").btn.btn-success.btn-lg.btn-block
                  = t("Continue")
                  = " "
                  i.fa.fa-angle-double-right
          if onboardKeepReading
            p: small: a(href=onboardKeepReading).text-center.mb-0.text-black-50= t("Not interested?  Click here to keep reading")
